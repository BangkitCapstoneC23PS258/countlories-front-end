<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFDFD"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-28dp">


    <EditText
        android:id="@+id/edt_tinggi"
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="tinggi"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="291dp" />

    <EditText
        android:id="@+id/edt_tanggal"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="tanggal"
        android:inputType="date"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="291dp" />

    <EditText
        android:id="@+id/edt_berat"
        android:layout_width="173dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="berat"
        android:inputType="number"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="370dp" />

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginEnd="20dp"
        android:entries="@array/gender_array"
        android:prompt="@string/gender_prompt"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="370dp" />

    <View
        android:id="@+id/ellipse_4"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ellipse_4"
        tools:background="@drawable/background_radius_blue"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="95dp" />

    <TextView
        android:id="@+id/personal_da"
        android:layout_width="179dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:lineSpacingExtra="-10sp"
        android:text="@string/personal_da"
        android:textAppearance="@style/personal_da"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="95dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="253dp"
        android:layout_height="58dp"
        android:hint="Save"
        android:textColorHint="#EDE1E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="265dp"
        android:layout_height="52dp"
        android:hint="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="609dp"
        tools:textColorHint="#FDF3F3" />
</androidx.constraintlayout.widget.ConstraintLayout>